<div class="container home_login">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <h2 class="text-center">partomaya.org</h2>
      <%= form_tag({:controller => "login", :action => "validate_register"}, :method => "post") do %>
        <fieldset>
        <div class="form-group">
          <label for="username">Usuario</label>
          <input type="text" class="form-control" name="username" id="username" placeholder="">
        </div>
        <div class="form-group">
          <label for="username">Email</label>
          <input type="text" class="form-control" name="email" id="email" placeholder="">
        </div>
        <div class="form-group">
          <label for="username">Categoria</label>
          <select class="form-control" name="categoria">
            <option value=""></option>
            <option value="categoria05">Categoria05</option>
          </select>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="">
        </div>
        <% if flash[:notice] %>
          <div class="alert alert-dismissible alert-danger">
            <strong>Oh snap!</strong>
            <%= flash[:notice] %>
          </div>
         <% end %>
        <button type="submit" class="btn btn-info btn-lg btn-block">Crear cuenta</button>
      </fieldset>
      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
